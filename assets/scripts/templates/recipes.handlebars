
  {{#each recipes as |recipe|}}
    {{log recipe}}
  <h3 data-id="{{recipe.id}}" class = "recipe-list" > <small>Name: {{recipe.name}}</small></h3>
    <ul data-id="{{recipe.id}}">
    <li>{{#if recipe.steps}}
        {{recipe.steps}}
        {{else}}
          No steps provided
        {{/if}}
      </li>
    <li>{{#if recipe.link}}
        {{recipe.link}}
        {{else}}
        No link found
      {{/if}}</li>
      <li><button class="btn btn-default delete-recipe" data-class="delete-recipe" data-id='{{recipe.id}}'>Remove recipe!</button></li>
       <li><button class="btn btn-default update-recipe" data-class="update-recipe" data-id='{{recipe.id}}'>Update recipe!</button></li>
       <li><fieldset>
         <legend>Update Your Recipe:</legend>
         Recipe Name: <input name="name" type="text" autocomplete="off" placeholder="Update Recipe Title " class="new-recipe" value=""><br> Steps: <input name="steps" type="text" autocomplete="off" placeholder="Update the receipe steps"><br> Recipe
         Link:
         <input name="link" type="text" placeholder="Update the recipe URL" autocomplete="off">
       </fieldset>
       <button type="submit" class="update-recipe" name="updateRecipe"> Update</button>
     </form></li>
